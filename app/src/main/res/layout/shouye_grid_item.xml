<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/shouye_item_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@mipmap/ic_launcher"/>


    <TextView
        android:id="@+id/shouye_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shouye_item_image"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:text="名字"/>

    <TextView
        android:id="@+id/shouye_item_jiesao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/shouye_item_name"
        android:text="￥198.00"
        android:layout_centerVertical="true"
        android:textColor="#bc462f" />

    <TextView
        android:id="@+id/shouye_item_zhaoxiangsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="#ccccd1"
        android:layout_below="@+id/shouye_item_image"
        android:text="找相似"/>

</RelativeLayout>